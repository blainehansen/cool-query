{
	"compilerOptions": {
		"strict": true,
		"incremental": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"declaration": true,
		"sourceMap": true,
		"lib": ["ESNext"],
		"target": "ESNext",
		"module": "commonjs",
		"outDir": "dist",
		"preserveConstEnums": true,
		"esModuleInterop": true
	},
	"include": [
		"lib/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts",
		"**/*.template.ts"
	]
}
